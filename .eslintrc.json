{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb-base",
        "airbnb-typescript/base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "avoid",
                "endOfLine": "auto",
                "printWidth": 120,
                "singleQuote": true
            }
        ],
        "@typescript-eslint/no-unused-vars": "warn"
    }
}
