{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "lib": [
      "ESNext",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
